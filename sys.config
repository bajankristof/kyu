[
    {kyu, [
        {connections, [
            #{name => localhost}
        ]}
    ]},
    {lager, [
        {colored, true},
        {colors, [
            {debug, "\e[1;34m"},
            {info, "\e[1;32m"},
            {notice, "\e[1;93m"},
            {warning, "\e[1;33m"},
            {error, "\e[1;31m"},
            {critical, "\e[1;35m"},
            {alert, "\e[1;44m"},
            {emergency, "\e[1;41m"}
        ]},
        {handlers, [
            {lager_console_backend, [
                {level, debug},
                {formatter, lager_default_formatter},
                {formatter_config, [
                    time,
                    " ",
                    color,
                    "[", severity, "]",
                    "\e[0m ",
                    message,
                    "\n",
                    metadata,
                    "\n"
                ]}
            ]}
        ]}
    ]}
].
